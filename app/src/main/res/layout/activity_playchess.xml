        app:layout_constraintBottom_toTopOf="@id/tvTimeClock"></ImageView>
    <ImageView
        android:id="@+id/Frame2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintDimensionRatio="V,1:1"
        android:src="@drawable/frame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageClock"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvNamePlayer2"></ImageView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avaPlayer2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintDimensionRatio="V,1:1"
        android:src="@mipmap/avatar"
        app:layout_constraintTop_toTopOf="@+id/Frame2"
        app:layout_constraintBottom_toBottomOf="@id/Frame2"
        app:layout_constraintLeft_toLeftOf="@id/Frame2"
        app:layout_constraintRight_toRightOf="@id/Frame2"
        app:layout_constraintVertical_bias="0.30"></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:text="No1.Player"
        android:id="@+id/tvNamePlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FBEED4"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Frame1"
        app:layout_constraintLeft_toRightOf="@id/barrier"
        app:layout_constraintRight_toLeftOf="@id/tvTimeClock"
        app:layout_constraintBottom_toTopOf="@id/gl30"></TextView>
    <TextView
        android:text="01:30"
        android:id="@+id/tvTimeClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FBEED4"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageClock"
        app:layout_constraintLeft_toRightOf="@id/tvNamePlayer1"
        app:layout_constraintRight_toLeftOf="@id/tvNamePlayer2"
        app:layout_constraintBottom_toTopOf="@id/gl30"></TextView>
    <TextView
        android:text="No2.Player"
        android:id="@+id/tvNamePlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FBEED4"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Frame2"
        app:layout_constraintLeft_toRightOf="@id/imageClock"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl30"></TextView>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        android:id="@+id/gl30">
    </androidx.constraintlayout.widget.Guideline>
    <ImageView
        android:id="@+id/chatRoom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/board_wooden"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/gl30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/barrier"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintRight_toRightOf="parent"></ImageView>
    <TextView
        android:id="@+id/tvTitleChatRoom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.3"
        android:gravity="center"
        android:text="Chat Room"
        android:textColor="#DCBB97"
        android:background="@drawable/title_chat_room"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@id/chatRoom"
        app:layout_constraintLeft_toLeftOf="@id/chatRoom"
        app:layout_constraintRight_toRightOf="@id/chatRoom"
        app:layout_constraintBottom_toTopOf="@id/listViewMessage"></TextView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/footerChatRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.92"
        android:orientation="horizontal"></androidx.constraintlayout.widget.Guideline>
    <EditText
        android:id="@+id/edtInputMessage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.3"
        android:hint="Type a message"
        android:padding="10dp"
        android:textColor="#3D0600"
        android:textSize="13dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/listViewMessage"
        app:layout_constraintLeft_toLeftOf="@id/listViewMessage"
        app:layout_constraintRight_toLeftOf="@id/ivButtonSendMessage"
        android:background="@drawable/input_message_image"></EditText>
    <ImageView
        android:id="@+id/ivButtonSendMessage"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/listViewMessage"
        app:layout_constraintLeft_toRightOf="@id/edtInputMessage"
        app:layout_constraintRight_toRightOf="@id/listViewMessage"
        android:src="@drawable/button_send_message"></ImageView>
    <ListView
        android:id="@+id/listViewMessage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:divider="@color/transparent"
        android:listSelector="@color/transparent"
        app:layout_constraintHeight_percent="0.44"
        app:layout_constraintWidth_percent="0.4"
        android:scrollbarSize="7dp"
        android:smoothScrollbar="true"
        android:layout_marginTop="10dp"
        android:scrollbarThumbVertical="@drawable/background_input"
        app:layout_constraintLeft_toLeftOf="@id/chatRoom"
        app:layout_constraintRight_toRightOf="@id/chatRoom"
        app:layout_constraintTop_toBottomOf="@id/tvTitleChatRoom"/>
</androidx.constraintlayout.widget.ConstraintLayout>