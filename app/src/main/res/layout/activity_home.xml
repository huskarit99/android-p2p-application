<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundBoard">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ivTitleImage"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/title_image"
        app:layout_constraintVertical_bias="0.07"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.48"
        android:background="@drawable/ic_bar_left"
        android:id="@+id/ivBarLeft"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/ivTitleImage"
        app:layout_constraintRight_toLeftOf="@id/ivBarRight"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.48"
        android:background="@drawable/ic_bar_right"
        android:id="@+id/ivBarRight"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/ivTitleImage"
        app:layout_constraintLeft_toRightOf="@id/ivBarLeft"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barrier1"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ivBarLeft, ivBarRight"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.83"
        android:background="@drawable/border_menu"
        android:id="@+id/ivBorderMenuOuter"
        app:layout_constraintTop_toBottomOf="@id/barrier1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.48"
        app:layout_constraintWidth_percent="0.8"
        android:background="@drawable/border_menu"
        android:id="@+id/ivBorderMenuInner"
        app:layout_constraintTop_toTopOf="@id/ivBorderMenuOuter"
        app:layout_constraintLeft_toLeftOf="@id/ivBorderMenuOuter"
        app:layout_constraintRight_toRightOf="@id/ivBorderMenuOuter"
        app:layout_constraintBottom_toBottomOf="@id/ivBorderMenuOuter"/>
    <TextView
        android:id="@+id/tvPlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.75"
        android:textSize="20dp"
        android:text="LET'S PLAY"
        android:textColor="#FFF6D9"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/ic_special_button"
        app:layout_constraintTop_toTopOf="@id/ivBorderMenuInner"
        app:layout_constraintLeft_toLeftOf="@id/ivBorderMenuInner"
        app:layout_constraintRight_toRightOf="@id/ivBorderMenuInner"
        app:layout_constraintBottom_toTopOf="@id/tvScan">
    </TextView>
    <TextView
        android:id="@+id/tvScan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.75"
        android:textSize="20dp"
        android:text="SCAN FOR PLAYERS"
        android:textColor="#FFF6D9"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/ic_button"
        app:layout_constraintTop_toBottomOf="@id/tvPlay"
        app:layout_constraintLeft_toLeftOf="@id/ivBorderMenuInner"
        app:layout_constraintRight_toRightOf="@id/ivBorderMenuInner"
        app:layout_constraintBottom_toTopOf="@id/tvProfile">
    </TextView>
    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.75"
        android:textSize="20dp"
        android:text="MY PROFILE"
        android:textColor="#FFF6D9"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/ic_button"
        app:layout_constraintTop_toBottomOf="@id/tvScan"
        app:layout_constraintLeft_toLeftOf="@id/ivBorderMenuInner"
        app:layout_constraintRight_toRightOf="@id/ivBorderMenuInner"
        app:layout_constraintBottom_toTopOf="@id/tvFriends">
    </TextView>
    <TextView
        android:id="@+id/tvFriends"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.75"
        android:textSize="20dp"
        android:text="MY FRIENDS"
        android:textColor="#FFF6D9"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/ic_button"
        app:layout_constraintTop_toBottomOf="@id/tvProfile"
        app:layout_constraintLeft_toLeftOf="@id/ivBorderMenuInner"
        app:layout_constraintRight_toRightOf="@id/ivBorderMenuInner"
        app:layout_constraintBottom_toTopOf="@id/tvQuit">
    </TextView>
    <TextView
        android:id="@+id/tvQuit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.75"
        android:textSize="20dp"
        android:text="QUIT"
        android:textColor="#FFF6D9"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/ic_button"
        app:layout_constraintTop_toBottomOf="@id/tvFriends"
        app:layout_constraintLeft_toLeftOf="@id/ivBorderMenuInner"
        app:layout_constraintRight_toRightOf="@id/ivBorderMenuInner"
        app:layout_constraintBottom_toBottomOf="@id/ivBorderMenuInner">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>